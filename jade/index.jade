doctype html
html(ng-app="todoApp")
    head
        title Todo App
        link(rel="stylesheet" href="styles/main.css")
    body(ng-controller="mainCtrl")
        div {{title}}
        div
            input(type="text" ng-model="newItem")
            button(ng-click="addItem()") Submit
            br
            input(type="text" ng-model="thingToRemove")
            button(ng-click="removeItem()") Remove
        br

        ol
            li(ng-repeat="item in list | filter:myFilter") {{item}}







        script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js")
        script(src="scripts/app.js")
        script(src='scripts/service.js')
        script(src="scripts/mainCtrl.js")
        
